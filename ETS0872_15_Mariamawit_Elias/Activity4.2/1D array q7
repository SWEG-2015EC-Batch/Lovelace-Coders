#include <iostream>
using namespace std;

int main
{
    int n;

    cout<<"How many numbers will you enter: ";
    cin>>n;

    int nums[n];

    cout<<"Enter numbers: ";
    for (int i = 0; i < n; i++)
        cin>>nums[i];

    cout<<"The even numbers in reverse order are: "<<endl<<"\t";
    for (int i = n - 1; i >= 0; i--)
    {
        if (nums[i] % 2 == 0)
            cout<<nums[i]<<" ";
    }
    return (0);
}
